@model Recruitment_Tracker.data.User
@{
    Layout = "";
}

<!doctype html>
<html lang="en">
<head>
	<title>Login 04</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="css/style.css">
    <link href="~/css/css-login/style.css" rel="stylesheet" />

</head>
<body>
	<section class="ftco-section">
		<div class="container md">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Login</h2>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-12 col-lg-10">
					<div class="wrap d-md">
                        @*<div class="img" style="background-image: url(/asset/img/images/bg-1.jpg);">
                            <img class ="img" style="background-images" src="/assets/img/images/bg-1.jpg" />
						</div>*@
						<div class="login-wrap p-4 p-md-5">
							<div class="d-flex">
								<div class="w-100">
									<h3 class="mb-4">Sign In</h3>
								</div>
							</div>
							<form asp-controller="Home" asp-action="Login" method="post">
								<div class="form-group mb-3">
									<label class="label" for="name">Username</label>
									<input asp-for="Username" type="text" class="form-control" placeholder="Password" required>
								</div>
								<div class="form-group mb-3">
									<label class="label" for="password">Password</label>
									<input asp-for="Password" type="password" class="form-control" placeholder="Password" required>
								</div>
								<div class="form-group">
									<button type="submit" class="form-control btn btn-primary rounded submit px-3">Sign In</button>
								</div>
								<div class="form-group d-md-flex">
									<div class="w-50 text-left">
										<label class="checkbox-wrap checkbox-primary mb-0">
											Remember Me
											<input type="checkbox" checked>
											<span class="checkmark"></span>
										</label>
									</div>

								</div>
							</form>
							<p class="text-center">Not a member? <a data-toggle="tab" href="../Home/RegistrasiAccount">Sign Up</a></p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

    <script src="js/jquery.min.js"></script>
    <script src="~/js/js-login/jquery.min.js"></script>
    <script src="js/popper.js"></script>
    <script src="~/js/js-login/popper.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="~/js/js-login/bootstrap.min.js"></script>
    <script src="js/main.js"></script>
    <script src="~/js/js-login/main.js"></script>

</body>
</html>

